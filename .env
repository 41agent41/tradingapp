# ==============================================
# TradingApp Configuration Template
# Copy this file to .env and update for your deployment
# ==============================================

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
SERVER_IP=localhost
TZ=UTC
ENVIRONMENT=production

# ===== FRONTEND CONFIGURATION =====
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0
NEXT_PUBLIC_API_URL=http://localhost:4000

# ===== BACKEND CONFIGURATION =====
BACKEND_PORT=4000
BACKEND_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000

# ===== IB SERVICE CONFIGURATION =====
IB_SERVICE_PORT=8000
IB_SERVICE_HOST=0.0.0.0
IB_HOST=10.7.3.21
IB_PORT=4002
IB_CLIENT_ID=1
IB_TIMEOUT=15
IB_CORS_ORIGINS=http://localhost:3000

# ===== IB GATEWAY TIMEZONE CONFIGURATION =====
IB_TIMEZONE=UTC
EXPECTED_TIMESTAMP_FORMAT=unix_seconds
DATA_TIMEZONE=UTC
IB_DATE_FORMAT=YYYYMMDD
IB_TIME_FORMAT=HHMMSS
IB_FORMAT_DATE=2

# ===== EXTERNAL POSTGRESQL TIMESERIES DATABASE =====
# External PostgreSQL database for historical data storage
POSTGRES_HOST=your-external-postgres-host
POSTGRES_PORT=5432
POSTGRES_USER=your-postgres-username
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=your-timeseries-database
POSTGRES_SSL_MODE=require
POSTGRES_SSL_CA=/path/to/ca-certificate.crt
POSTGRES_SSL_CERT=/path/to/client-certificate.crt
POSTGRES_SSL_KEY=/path/to/client-key.key

# ===== REDIS CACHING CONFIGURATION =====
# Redis for in-memory caching of historical data
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL_ENABLED=false
REDIS_SSL_CA=/path/to/redis-ca-certificate.crt

# ===== CACHING CONFIGURATION =====
# Cache settings for historical data
CACHE_TTL_HISTORICAL=3600
CACHE_TTL_REALTIME=60
CACHE_TTL_SYMBOLS=1800
CACHE_MAX_SIZE=10000

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=trading_app_jwt_secret_2025
SESSION_SECRET=trading_app_session_secret_2025

# ===== EXAMPLE VALUES =====
# Replace with your actual external database configuration:
# 
# External PostgreSQL Example:
# POSTGRES_HOST=timeseries-db.company.com
# POSTGRES_PORT=5432
# POSTGRES_USER=tradingapp_user
