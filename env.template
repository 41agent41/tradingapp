# ==============================================
# TradingApp Configuration Template
# Copy this file to .env and update for your deployment
# ==============================================

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
SERVER_IP=YOUR_SERVER_IP
ENVIRONMENT=production

# ===== FRONTEND CONFIGURATION =====
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:4000

# ===== BACKEND CONFIGURATION =====
BACKEND_PORT=4000
BACKEND_HOST=0.0.0.0
CORS_ORIGINS=http://YOUR_SERVER_IP:3000

# ===== IB SERVICE CONFIGURATION =====
IB_SERVICE_PORT=8000
IB_SERVICE_HOST=0.0.0.0
IB_HOST=YOUR_IB_GATEWAY_IP
IB_PORT=4002
IB_CLIENT_ID=1
IB_TIMEOUT=15
IB_CORS_ORIGINS=http://YOUR_SERVER_IP:3000

# ===== DATABASE CONFIGURATION =====
POSTGRES_USER=tradingapp
POSTGRES_PASSWORD=tradingapp123
POSTGRES_DB=tradingapp
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===== REDIS CONFIGURATION =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# ===== EXAMPLE VALUES =====
# Replace YOUR_SERVER_IP with your actual server IP (e.g., 10.7.3.20)
# Replace YOUR_IB_GATEWAY_IP with your IB Gateway IP (e.g., 10.7.3.21)
# 
# Example configuration:
# SERVER_IP=10.7.3.20
# NEXT_PUBLIC_API_URL=http://10.7.3.20:4000
# CORS_ORIGINS=http://10.7.3.20:3000
# IB_HOST=10.7.3.21
# 
# For Docker container to host connection:
# IB_HOST=host.docker.internal 