# ===== SERVER CONFIGURATION =====
NODE_ENV=production
SERVER_IP=YOUR_SERVER_IP

# ===== FRONTEND CONFIGURATION =====
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:4000

# ===== BACKEND CONFIGURATION =====
BACKEND_PORT=4000
